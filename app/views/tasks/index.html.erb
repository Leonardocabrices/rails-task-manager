<div class="container">
<h1 class="mt-5">My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
        <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
      <%end  %>
  </ul>
  <%= link_to "New task", new_task_path, class: "btn btn-primary ms-3"%>
</div>
